<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/project_preview_thumb_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/project_preview_loader_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLargeInverse"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <!--  Image thumbnail -->
            <ImageView
                android:id="@+id/project_preview_image_item"
                android:layout_width="@dimen/project_preview_thumb_width"
                android:layout_height="@dimen/project_preview_thumb_height"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <!-- Title and description container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/project_preview_thumb_margin">

            <TextView
                android:id="@+id/project_preview_name_item"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:hint="name"/>

            <TextView
                android:id="@+id/project_preview_description_item"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="3"
                android:hint="description"/>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>