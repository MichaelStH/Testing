<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <fragment
            tools:layout="@layout/fragment_multi_pane_main"
            android:id="@+id/mainFragment"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            class="com.riders.testing.fragments.MultiPaneMainFragment">
        </fragment>


        <fragment
            tools:layout="@layout/fragment_multi_pane_detail"
            android:id="@+id/detailFragment"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            class="com.riders.testing.fragments.MultiPaneDetailFragment" >
        </fragment>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>